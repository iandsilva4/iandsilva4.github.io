<style>
  html {
    scroll-behavior: smooth;
  }
  .dot-nav {
    position: fixed;
    top: 50%;
    right: 2rem;
    transform: translateY(-50%);
    z-index: 40;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .dot-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  .dot {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #e5e7eb;
    border: 2px solid #cbd5e1;
    transition: background 0.2s, border 0.2s, box-shadow 0.2s, transform 0.2s;
    cursor: pointer;
    box-shadow: 0 2px 8px 0 rgba(37,99,235,0);
    outline: none;
    position: relative;
  }
  .dot.active {
    background: #2563eb;
    border-color: #2563eb;
    box-shadow: 0 2px 16px 0 rgba(37,99,235,0.4);
    transform: scale(1.25);
  }
  .dot:focus {
    box-shadow: 0 0 0 3px #93c5fd;
  }
  .dot:hover + .dot-tooltip, .dot:focus + .dot-tooltip {
    opacity: 1;
    pointer-events: auto;
    transform: translateX(-10px) scale(1);
  }
  .dot-tooltip {
    opacity: 0;
    pointer-events: none;
    position: absolute;
    right: 120%;
    top: 50%;
    transform: translateY(-50%) translateX(0) scale(0.95);
    background: #111827;
    color: #fff;
    padding: 0.35em 0.85em;
    border-radius: 0.5em;
    font-size: 0.95em;
    white-space: nowrap;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.15);
    transition: opacity 0.18s, transform 0.18s;
    font-weight: 500;
    letter-spacing: 0.01em;
  }
  .post-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.2s;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .post-card:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: #f3f4f6;
  }
  .post-content {
    display: flex;
    flex-direction: column;
    flex: 1 1 auto;
    padding: 1.5rem;
  }
  .post-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    min-height: unset;
    line-height: 1.25;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }
  .post-desc {
    color: #4b5563;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
    min-height: unset;
    line-height: 1.25;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .post-footer {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .loading {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200px;
    color: #6b7280;
  }
  .error {
    color: #dc2626;
    text-align: center;
    padding: 1rem;
  }
  @media (max-width: 768px) {
    .dot-nav { display: none; }
  }
</style>
<script>
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      const sections = ['writing', 'presentations', 'music', 'coding'];
      const dots = document.querySelectorAll('.dot-nav .dot');
      
      function onScroll() {
        let current = 0;
        sections.forEach((id, i) => {
          const el = document.getElementById(id);
          if (el && window.scrollY + window.innerHeight / 2 >= el.offsetTop) {
            current = i;
          }
        });
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === current);
        });
      }
      
      window.addEventListener('scroll', onScroll);
      onScroll();
    });
  }
</script>
